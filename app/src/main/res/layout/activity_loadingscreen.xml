<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapp"
    tools:context=".LoadingScreenActivity">

    <ImageView
        android:id="@+id/imageLoading"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/frame_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="168dp"/>

    <TextView
        android:id="@+id/loadingPercentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loadingPercent"
        android:textColor="@color/colorLoadingText"
        android:textSize="25sp"
        android:textStyle="normal"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_above="@+id/progress_bar" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_above="@id/loadingTextView"
        android:progress="0"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:progressDrawable="@drawable/myprogressbar_loading" />

    <TextView
        android:id="@+id/loadingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loadingTextView"
        android:textColor="@color/colorLoadingText"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="visible"/>

</RelativeLayout>